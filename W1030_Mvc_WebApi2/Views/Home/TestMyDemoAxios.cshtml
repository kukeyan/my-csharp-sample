<table>
    <tr>
        <td> 用户名 </td>
        <td> <input id="txtUpdateUserName" type="text" /> </td>
    </tr>
    <tr>
        <td> 密码 </td>
        <td> <input id="txtUpdatePassword" type="text" /> </td>
    </tr>
    <tr>
        <td colspan="2">
            <input id="btnUpdate" type="button" value="更新数据" onclick="update()" />
        </td>
    </tr>
</table>


